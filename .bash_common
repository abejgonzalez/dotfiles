: "${XDG_CONFIG_HOME:?Need to set XDG_CONFIG_HOME}"

# Better ls
alias l="ls -alh --color=auto"

alias vim="nvim"

# Use a specific .tmux.conf
alias tmux="tmux -f $XDG_CONFIG_HOME/.tmux.conf"

# Set default editor
export VISUAL=nvim
export EDITOR="$VISUAL"

# Expand env. variables on prompt
shopt -s direxpand
