: "${CONFIG_DIR:?Need to set CONFIG_DIR}"

# Better ls
alias l="ls -alh --color=auto"

# Use a specific .vimrc
alias vim="vim -u $CONFIG_DIR/.vimrc"

# Use a specific .tmux.conf
alias tmux="tmux -f $CONFIG_DIR/.tmux.conf"

# Use -A with ssh to forward keys
alias ssh="ssh -A"

# Set default editor
export VISUAL=vim
export EDITOR="$VISUAL"

# Set zsh plugins
autoload -U colors && colors
source $HOME/.zsh/zsh-autocomplete/zsh-autocomplete.plugin.zsh
source $HOME/.zsh/fsh/fast-syntax-highlighting.plugin.zsh

# set autocomplete to start after typing 1 char
zstyle ':autocomplete:*' min-input 1
# set autocomplete to use tab to cycle options
zstyle ':autocomplete:*' widget-style menu-complete

# set history configuration
# #set history size
export HISTSIZE=10000
#save history after logout
export SAVEHIST=10000
#history file
export HISTFILE=$HOME/.zsh/.zhistory
#append into history file
setopt INC_APPEND_HISTORY
#save only one command if 2 common are same and consistent
setopt HIST_IGNORE_DUPS
#add timestamp for each entry
setopt EXTENDED_HISTORY

# disable showing recent directories in the autocomplete
zstyle ':autocomplete:*' recent-dirs no
